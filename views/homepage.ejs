<!DOCTYPE html5>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>

    <link href="/css/homepage.css" rel="stylesheet">
</head>

<body>

    <div id="app">


        <h1 id="head">TODO App</h1>


        <!-- add /delete buttons -->
        <div>
            <form action="/add-task/" method="post">
                <!-- description -->
                <div>
                    <label>Description</label>
                    <br>
                    <input type="text" name="desc" placeholder="What do you need to do" required>
                </div>

                <!-- category -->
                <div>
                    <label>Category</label><br>
                    <input type="text" name="category" placeholder="What is the category?" required>
                </div>


                <!-- due date -->

                <div>
                    <label>Due Date</label>
                    <br>
                    <input type="date" name="date" placeholder="dd/mm/yyyy" required>
                </div>


                <button id="add-task-btn" type="submit">ADD TASK</button>

            </form>
        </div>


        <!-- LIST OF TASKS ADDED -->
        <h2> List of tasks added </h2>


        <div id="outer">

            <%for(let i of task_list){ %>

                <div id="inner">

                    <input type="checkbox" class="checkbox-input" id="<%=i%>" name="task-details">
                    <label class='checkbox-label' for="<%=i%>">

                    <div>
                        <p>Task is:
                            <%= i.description %>
                        </p>
                        <p>Category is:
                            <%= i.category %>
                        </p>
                        <p>Due date is:
                            <%= i.duedate %>
                        </p>
                    </div>
                    </label>
                    <form action="/del-task/?id=<%= i.id %>" method="post">
                        <button id="del-task-btn">DELETE TASK</button>
                    </form>
                </div>

                <%   } %>
        </div>



        <!-- jquery cdn -->
        <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
        <!-- including our js -->
        <script src="/js/homepage.js"></script>
    </div>


</body>

</html>